// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

// 1. 데이터베이스 설정 (MySQL)
datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL") // .env 파일의 DATABASE_URL을 사용
}

// 2. Prisma Client 생성기 (Node.js용)
generator client {
  provider = "prisma-client-js"
}

// 3. 데이터 모델 (DB 테이블 설계도)

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerifiedAt DateTime?
  passwordHash  String?   // 소셜 로그인은 비번이 없을 수 있음
  googleId      String?   @unique // 구글 ID 저장용

  resetPasswordToken   String?   @unique
  resetPasswordExpires DateTime?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // [추가됨] 관계 설정: 한 유저는 여러 개의 북마크를 가질 수 있음
  bookmarks Bookmark[]
}

model EmailVerificationCode {
  id        String   @id @default(cuid())
  email     String
  code      String   @unique
  expiresAt DateTime

  used Boolean @default(false) // 코드 사용 여부 추적용

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([email, code])
}

// 이메일 인증번호(6자리)를 임시로 저장하는 테이블
model VerificationToken {
  identifier String   // 인증할 이메일 주소 (예: you@example.com)
  token      String   // 발송된 6자리 인증번호 (예: 123456)
  expires    DateTime // 인증번호 만료 시간 (5분 뒤)

  // 이메일과 토큰의 조합은 유일해야 함 (중복 방지)
  @@unique([identifier, token])
}

// [신규 추가] 북마크 모델
model Bookmark {
  id          String   @id @default(cuid()) // 다른 모델들과 일관성을 위해 CUID 사용
  userId      String   // User 모델의 id 타입(String)과 일치해야 함
  cityName    String
  country     String
  description String   @db.Text // AI가 생성한 긴 설명을 저장하기 위해 Text 타입 사용
  price       String   // "약 150만원" 처럼 문자열로 올 수 있음
  tags        Json     // ["휴양지", "바다"] 같은 배열을 유연하게 저장하기 위해 MySQL JSON 타입 사용
  emoji       String?  // UI 표시용 이모지 (선택 사항)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // 관계 설정: 북마크는 한 명의 유저에게 속함. 유저 삭제 시 북마크도 같이 삭제(Cascade).
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  // 유니크 제약: 한 유저가 같은 도시를 중복으로 북마크할 수 없음
  @@unique([userId, cityName])
  // 성능 향상: 특정 유저의 북마크를 빠르게 조회하기 위한 인덱스
  @@index([userId])
}